<Window x:Class="DrawApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="Beige"
                    AllowDrop="True"
                    DragOver="panel_DragOver"
                    Drop="panel_Drop">
            <TextBox Width="Auto" Margin="2" Text="green"/>
            <local:Circle Margin="2"/>
            <local:Circle Margin="2"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Background="Bisque"
                    AllowDrop="True"
                    DragOver="panel_DragOver"
                    Drop="panel_Drop">
        </StackPanel>
    </Grid>
</Window>
